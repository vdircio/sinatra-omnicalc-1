<form action="/payment/results" method="get">
  <label for="apr">APR</label>
  <input id="apr" type="text" name="apr" placeholder="E.g 5.3">

  <label for="num_years">Number of Years</label>
  <input id="num_years" type="text" name="num_years" placeholder="How many years to repay">

  <label for="principal">Principal</label>
  <input id="principal" type="text" name="principal" placeholder="How much principal">
  <button type="submit">Calculate monthly payment</button>
</form>
